{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    // "target": "es6",
    // "lib": ["es6"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": false,
    "baseUrl": ".",
    "jsx": "preserve",
    "jsxImportSource": "@emotion/react",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "target": "es6",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom.iterable", "dom", "esnext"],
    "outDir": "build",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "paths": {
      "@atoms/*": ["libs/components/atoms/*"],
      "@molecules/*": ["libs/components/molecules/*"],
      "@organisms/*": ["libs/components/organisms/*"],
      "@ui/*": ["libs/ui/src/*"],
      "@ui": ["libs/ui/src/index.ts"],
      "@provider/*": ["libs/provider/src/*"]
    },
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "libs/components/**/*"
  ],
  "exclude": [
    ".next",
    "node_modules",
    "jest.setup.ts",
    "jest.preset.ts",
    "**/*.stories.ts",
    "**/*.stories.js",
    "**/*.stories.jsx",
    "**/*.stories.tsx"
  ]
}
