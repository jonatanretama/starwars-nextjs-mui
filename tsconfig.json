{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    // "target": "es6",
    // "lib": ["es6"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": false,
    "baseUrl": ".",
    "jsx": "preserve",
    "jsxImportSource": "@emotion/react",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "target": "es6",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom.iterable", "dom", "esnext"],
    "outDir": "build",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "paths": {
      "@api/*": ["libs/api/*"],
      "@api": ["libs/api/index.ts"],
      "@atoms/*": ["libs/components/atoms/*"],
      "@atoms": ["libs/components/atoms/index.ts"],
      "@molecules/*": ["libs/components/molecules/*"],
      "@molecules": ["libs/components/molecules/index.ts"],
      "@organisms/*": ["libs/components/organisms/*"],
      "@organisms": ["libs/components/organisms/index.ts"],
      "@ui/*": ["libs/ui/*"],
      "@ui": ["libs/ui/index.ts"],
      "@provider/*": ["libs/provider/*"],
      "@provider": ["libs/provider/index.ts"],
      "@utils/*": ["libs/utils/*"],
      "@utils": ["libs/utils/index.ts"],
      "@models": ["libs/models/index.ts"],
      "@models/*": ["libs/models/*"],
      "@hooks": ["libs/hooks/index.ts"],
      "@hooks/*": ["libs/hooks/*"],
      "@mocks": ["libs/mocks/index.ts"],
      "@mocks/*": ["libs/mocks/*"]
    },
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "libs/components/**/*",
    "**/*.stories.*",
    ".storybook/**/*",
    "__tests__/**/*"
  ],
  "exclude": [".next", "node_modules", "jest.setup.ts", "jest.preset.ts"]
}
